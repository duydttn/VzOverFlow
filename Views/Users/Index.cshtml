</div>

<form method="get" class="mb-4 flex flex-wrap items-center gap-2 text-sm">
    <div class="relative flex-1 min-w-[200px]">
        <input name="search"
               value="@search"
               class="w-full rounded-md border border-slate-200 bg-white px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
               placeholder="Tìm theo tên người dùng..." />
    </div>
    <button type="submit"
            class="rounded-md bg-slate-900 text-white px-3 py-2 text-sm hover:bg-slate-800">
        Tìm kiếm
    </button>
</form>

@if (!Model.Any())
{
    <div class="bg-white border border-slate-200 rounded-lg p-4 text-sm text-slate-600">
        Chưa có người dùng nào hoặc không tìm thấy phù hợp.
    </div>
}
else
{
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-3">
        @foreach (var u in Model)
        {
            var avatarUrl = $"https://api.dicebear.com/7.x/avataaars/svg?seed={u.UserName}";
            <article class="bg-white border border-slate-200 rounded-lg p-4 shadow-sm hover:border-blue-500 transition-colors text-xs">
                <div class="flex items-center gap-3 mb-3">
                    <img src="@avatarUrl" alt="@u.UserName" class="h-7 w-7 rounded-full" />
                    <div>
                        <a asp-action="Profile" asp-route-id="@u.Id"
                           class="text-sm font-semibold text-slate-900 hover:underlinsse">
                            @u.UserName
                        </a>
                        <div class="text-[11px] text-slate-500">@u.Email</div>
                    </div>
                </div>

                <div class="flex items-center justify-between text-[11px] text-slate-500">
                    <span>Tham gia @u.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy")</span>
                    <a asp-action="Profile" asp-route-id="@u.Id"
                       class="text-blue-600 hover:underline">
                        Xem hồ sơ
                    </a>
                </div>
            </article>
        }
    </div>
}
