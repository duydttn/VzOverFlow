@model VzOverFlow.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
    Layout = "_AuthLayout";
}

<div class="bg-white border border-slate-200 rounded-lg p-6 shadow-sm">
    <h1 class="text-2xl font-semibold text-slate-900 mb-1 text-center">Đăng ký</h1>
    <p class="text-sm text-slate-600 mb-6 text-center">
        Tạo tài khoản để tham gia cộng đồng VzOverFlow
    </p>

    <form asp-action="Register" method="post" class="space-y-4">
        @Html.AntiForgeryToken()

        <div>
            <label asp-for="UserName" class="block text-sm font-medium text-slate-800 mb-1">Tên đăng nhập</label>
            <input asp-for="UserName"
                   class="w-full rounded-md border border-slate-200 px-3 py-2 text-sm foc?s:outline-none foc?s:ring-2 foc?s:ring-blue-500 foc?s:border-blue-500" />
            <span asp-validation-for="UserName" class="text-xs text-red-500"></span>
        </div>

        <div>
            <label asp-for="Email" class="block text-sm font-medium text-slate-800 mb-1">
                Email <span class="text-red-500">*</span>
            </label>
            <input asp-for="Email" type="email" required
                   placeholder="your@email.com"
                   class="w-full rounded-md border border-slate-200 px-3 py-2 text-sm foc?s:outline-none foc?s:ring-2 foc?s:ring-blue-500 foc?s:border-blue-500" />
            <span asp-validation-for="Email" class="text-xs text-red-500"></span>
            <p class="text-xs text-slate-500 mt-1">Email sẽ được dùng để nhận mã OTP khi đăng nhập</p>
        </div>

        <div>
            <label asp-for="Password" class="block text-sm font-medium text-slate-800 mb-1">Mật khẩu</label>
            <input asp-for="Password" type="password"
                   class="w-full rounded-md border border-slate-200 px-3 py-2 text-sm foc?s:outline-none foc?s:ring-2 foc?s:ring-blue-500 foc?s:border-blue-500" />
            <span asp-validation-for="Password" class="text-xs text-red-500"></span>
        </div>

        <div>
            <label asp-for="ConfirmPassword" class="block text-sm font-medium text-slate-800 mb-1">Xác nhận mật khẩu</label>
            <input asp-for="ConfirmPassword" type="password" required
                   class="w-full rounded-md border border-slate-200 px-3 py-2 text-sm foc?s:outline-none foc?s:ring-2 foc?s:ring-blue-500 foc?s:border-blue-500" />
            <span asp-validation-for="ConfirmPassword" class="text-xs text-red-500"></span>
        </div>

        <button type="submit"
                class="w-full rounded-md bg-slate-900 text-white text-sm px-3 py-2 hover:bg-slate-800">
            Đăng ký
        </button>
    </form>

    <p class="text-xs text-slate-500 mt-4 text-center">
        Đã có tài khoản?
        <a asp-action="Login" class="text-blue-600 hover:underline">Đăng nhập</a>
    </p>
</div>
