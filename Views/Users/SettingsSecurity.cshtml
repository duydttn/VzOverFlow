@model VzOverFlow.Models.ViewModels.SecuritySettingsViewModel
@{
    ViewData["Title"] = "Bảo mật tài khoản";
}

<div class="max-w-3xl mx-auto space-y-6">
    @await Html.PartialAsync("_SettingsNav")

    <div class="bg-white border border-slate-200 rounded-lg p-5 shadow-sm">
        <h1 class="text-2xl font-semibold text-slate-900 mb-2">Bảo mật & OTP</h1>
        <p class="text-sm text-slate-600">Kiểm soát bảo mật hai lớp và mật khẩu đăng nhập.</p>
        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            <div class="mt-3 rounded-md border border-blue-200 bg-blue-50 px-3 py-2 text-xs text-blue-800">
                @Model.StatusMessage
            </div>
        }
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-sm">
        <section class="bg-white border border-slate-200 rounded-lg p-5 shadow-sm space-y-3">
            <div class="flex items-center justify-between">
                <div>
                    <h2 class="text-base font-semibold text-slate-900">Bảo mật 2 lớp (OTP)</h2>
                    <p class="text-xs text-slate-500">
                        @if (Model.TwoFactorEnabled)
                        {
                            <span>Đã bật. Mọi lần đăng nhập đều cần OTP gửi tới email.</span>
                        }
                        else
                        {
                            <span>Chưa bật. Bạn có thể kích hoạt để tăng độ an toàn.</span>
                        }
                    </p>
                </div>
                <span class="inline-flex items-center rounded-full px-2 py-0.5 text-xs @(Model.TwoFactorEnabled ? "bg-emerald-50 text-emerald-700" : "bg-slate-100 text-slate-600")">
                    @(Model.TwoFactorEnabled ? "Đang bật" : "Đang tắt")
                </span>
            </div>

            <form asp-action="RequestTwoFactorCode" method="post" class="space-y-2">
                @Html.AntiForgeryToken()
                <input type="hidden" name="mode" value="@(Model.TwoFactorEnabled ? "disable" : "enable")" />
                <button type="submit"
                        class="w-full rounded-md border border-slate-200 px-3 py-2 hover:bg-slate-50">
                    Gửi mã OTP @(Model.TwoFactorEnabled ? "để tắt 2FA" : "kích hoạt 2FA")
                </button>
            </form>

            <form asp-action="@(Model.TwoFactorEnabled ? "DisableTwoFactor" : "EnableTwoFactor")" method="post" class="space-y-2">
                @Html.AntiForgeryToken()
                <label class="block text-xs text-slate-500">Nhập mã OTP</label>
                <input name="code" maxlength="6"
                       class="w-full rounded-md border border-slate-200 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <button type="submit"
                        class="w-full rounded-md bg-slate-900 text-white px-3 py-2 hover:bg-slate-800">
                    @(Model.TwoFactorEnabled ? "Xác nhận tắt 2FA" : "Xác nhận bật 2FA")
                </button>
            </form>
        </section>

        <section class="bg-white border border-slate-200 rounded-lg p-5 shadow-sm space-y-3">
            <h2 class="text-base font-semibold text-slate-900">Đổi mật khẩu</h2>
            <p class="text-xs text-slate-500">
                Bạn cần nhập mật khẩu cũ. Nếu bật 2FA, yêu cầu thêm mã OTP đổi mật khẩu.
            </p>

            <form asp-action="RequestChangePasswordOtp" method="post">
                @Html.AntiForgeryToken()
                <button type="submit"
                        class="w-full rounded-md border border-slate-200 px-3 py-2 text-sm hover:bg-slate-50">
                    Gửi mã OTP đổi mật khẩu
                </button>
            </form>

            <form asp-action="ChangePassword" method="post" class="space-y-2">
                @Html.AntiForgeryToken()
                <div>
                    <label class="block text-xs text-slate-500">Mật khẩu cũ</label>
                    <input name="OldPassword" type="password"
                           class="w-full rounded-md border border-slate-200 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>
                <div>
                    <label class="block text-xs text-slate-500">Mật khẩu mới</label>
                    <input name="NewPassword" type="password"
                           class="w-full rounded-md border border-slate-200 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>
                <div>
                    <label class="block text-xs text-slate-500">Xác nhận mật khẩu mới</label>
                    <input name="ConfirmNewPassword" type="password"
                           class="w-full rounded-md border border-slate-200 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>
                <div>
                    <label class="block text-xs text-slate-500">Mã OTP</label>
                    <input name="OtpCode" maxlength="6"
                           class="w-full rounded-md border border-slate-200 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>
                <button type="submit"
                        class="w-full rounded-md bg-blue-600 text-white px-3 py-2 hover:bg-blue-700">
                    Đổi mật khẩu
                </button>
            </form>
        </section>
    </div>
</div>


