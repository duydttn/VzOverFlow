@{
    ViewData["Title"] = "Xác thực Email";
    Layout = "_AuthLayout";
}

<div class="bg-white rounded-2xl shadow-xl p-8 border border-slate-200">
    <div class="text-center mb-8">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 rounded-full mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
        </div>
        <h1 class="text-2xl font-bold text-slate-900 mb-2">Xác thực Email</h1>
        <p class="text-sm text-slate-600">
    Mã OTP đã được gửi đến email
    </p>
        @if (!string.IsNullOrEmpty(ViewBag.Email as string))
        {
  <p class="text-sm font-semibold text-blue-600 mt-1">@ViewBag.Email</p>
 }
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.Info as string))
    {
   <div class="mb-6 bg-blue-50 border border-blue-200 rounded-lg p-4 flex items-start gap-3">
            <svg class="w-5 h-5 text-blue-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
 <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
            </svg>
            <p class="text-sm text-blue-800">@ViewBag.Info</p>
        </div>
    }

    @if (!string.IsNullOrEmpty(ViewBag.Error as string))
    {
        <div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4 flex items-start gap-3">
            <svg class="w-5 h-5 text-red-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
         </svg>
     <p class="text-sm text-red-800">@ViewBag.Error</p>
        </div>
    }

    <form asp-action="VerifyEmail" method="post" class="space-y-6">
     @Html.AntiForgeryToken()

  <div>
       <label class="block text-sm font-medium text-slate-700 mb-2">
                Nhập mã OTP (6 chữ số)
    </label>
            <input name="otpCode" 
                type="text" 
     maxlength="6" 
                   pattern="[0-9]{6}"
        required 
      autofocus
          placeholder="000000"
   class="w-full text-center text-3xl font-mono tracking-widest rounded-lg border-2 border-slate-300 px-4 py-4 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
    <p class="mt-2 text-xs text-slate-500">
💡 Kiểm tra hộp thư đến hoặc thư rác (spam)
       </p>
        </div>

        <button type="submit" 
   class="w-full bg-blue-600 text-white rounded-lg px-4 py-3 font-semibold hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors">
            ✓ Xác nhận và Hoàn tất đăng ký
</button>
    </form>

    <div class="mt-6 text-center">
   <p class="text-sm text-slate-600 mb-3">Không nhận được mã?</p>
   <form asp-controller="Users" asp-action="ResendEmailVerification" method="post" class="inline">
    @Html.AntiForgeryToken()
        <button type="submit" 
   class="text-sm text-blue-600 hover:text-blue-700 font-medium hover:underline">
          📧 Gửi lại mã OTP
    </button>
    </form>
    </div>

    <div class="mt-8 pt-6 border-t border-slate-200">
        <h3 class="text-xs font-semibold text-slate-700 mb-3">💡 Lưu ý:</h3>
<ul class="space-y-2 text-xs text-slate-600">
      <li class="flex items-start gap-2">
         <span class="text-blue-500 mt-0.5">•</span>
     <span>Mã OTP có hiệu lực trong <strong>5 phút</strong></span>
      </li>
          <li class="flex items-start gap-2">
                <span class="text-blue-500 mt-0.5">•</span>
  <span>Nếu chờ quá lâu, hãy gửi lại mã mới</span>
     </li>
          <li class="flex items-start gap-2">
       <span class="text-blue-500 mt-0.5">•</span>
                <span>Không chia sẻ mã OTP với bất kỳ ai</span>
          </li>
        </ul>
    </div>
</div>

<div class="mt-6 text-center">
<a asp-controller="Users" asp-action="Register" 
     class="text-sm text-slate-600 hover:text-slate-900">
     ← Quay lại trang đăng ký
  </a>
</div>