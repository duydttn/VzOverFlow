@model VzOverFlow.Models.Question
@{
    ViewData["Title"] = "Chỉnh sửa câu hỏi";
}

<div class="mb-6">
    <h1 class="text-2xl md:text-3xl font-semibold text-slate-900 mb-2">
        Chỉnh sửa câu hỏi
    </h1>
    <p class="text-sm text-slate-600">
        Cập nhật nội dung câu hỏi để rõ ràng và chính xác hơn.
    </p>
</div>

<form asp-action="Edit" method="post" class="space-y-6">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="bg-white border border-slate-200 rounded-lg p-5 shadow-sm">
        <div class="mb-4">
            <label asp-for="Title" class="block text-sm font-semibold text-slate-800 mb-1">
                Tiêu đề
            </label>
            <input asp-for="Title"
                   class="w-full rounded-md border border-slate-200 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Title" class="text-xs text-red-500"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Body" class="block text-sm font-semibold text-slate-800 mb-1">
                Nội dung chi tiết
            </label>
            <textarea asp-for="Body" rows="10"
                      class="w-full rounded-md border border-slate-200 px-3 py-2 text-sm font-mono focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"></textarea>
            <span asp-validation-for="Body" class="text-xs text-red-500"></span>
        </div>

        <div class="mb-4">
            <label class="block text-sm font-semibold text-slate-800 mb-1">
                Thẻ (Tags)
            </label>
            <p class="text-xs text-slate-500 mb-2">
                Nhập lại danh sách thẻ (cách nhau bởi khoảng trắng).
            </p>
            <input name="tags"
                   value="@ViewBag.Tags"
                   class="w-full rounded-md border border-slate-200 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
        </div>

        <div class="flex items-center justify-between pt-2">
            <a asp-action="Details" asp-route-id="@Model.Id"
               class="text-xs text-slate-500 hover:text-slate-700">
                Quay lại câu hỏi
            </a>
            <div class="space-x-2">
                <a asp-action="Index"
                   class="text-xs text-slate-500 hover:text-slate-700">
                    Huỷ
                </a>
                <button type="submit"
                        class="inline-flex items-center gap-2 rounded-md bg-blue-600 text-white text-sm px-4 py-2 hover:bg-blue-700 shadow-sm">
                    Lưu thay đổi
                </button>
            </div>
        </div>
    </div>
</form>
