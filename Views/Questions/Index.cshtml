@model VzOverFlow.Models.ViewModels.QuestionListViewModel
@{
    ViewData["Title"] = "Tất cả câu hỏi";
}

<div class="mb-6 flex items-start justify-between gap-4">
    <div>
        <h1 class="text-2xl md:text-3xl font-semibold text-slate-900 mb-1">
            Tất cả câu hỏi
        </h1>
        <p class="text-sm text-slate-600">
            Tìm kiếm hoặc lọc theo thẻ để khám phá kiến thức.
        </p>
    </div>

    @* <a asp-action="Create"
       class="hidden sm:inline-flex items-center gap-2 rounded-md bg-blue-600 text-white text-sm px-3 py-2 hover:bg-blue-700 shadow-sm">
        ＋ <span>Đặt câu hỏi</span>
    </a> *@
</div>

<form method="get" class="mb-4 flex flex-wrap items-center gap-2 text-sm">
    <input name="search"
           value="@Model.Search"
           class="flex-1 min-w-[200px] rounded-md border border-slate-200 bg-white px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
           placeholder="Từ khoá..." />
    <input name="tag"
           value="@Model.Tag"
           class="w-40 rounded-md border border-slate-200 bg-white px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
           placeholder="Tag" />
    <button type="submit"
            class="rounded-md bg-slate-900 text-white px-3 py-2 text-sm hover:bg-slate-800">
        Lọc
    </button>
</form>

<div class="space-y-3">
    @foreach (var q in Model.Questions)
    {
        @await Html.PartialAsync("_QuestionCard", q)
    }
</div>
