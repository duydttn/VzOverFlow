@using VzOverFlow.Helpers
@model VzOverFlow.Models.ViewModels.QuestionListItemViewModel

<article class="bg-white border border-slate-200 rounded-lg p-4 shadow-sm hover:border-blue-400 transition-all duration-200">
    <div class="flex gap-4 sm:gap-6">
        <div class="flex flex-col items-end gap-2 min-w-[60px] sm:min-w-[80px] text-xs text-slate-600 shrink-0">
            <div class="text-right">
                <span class="font-semibold text-slate-900">@Model.VoteScore</span> votes
            </div>
            <div class="text-right @(Model.AnswerCount > 0 ? "text-green-600 border border-green-600 px-1.5 py-0.5 rounded bg-green-50" : "")">
                <span class="font-semibold">@Model.AnswerCount</span> answers
            </div>
            <div class="text-right text-slate-400">
                <span>@Model.ViewCount</span> views
            </div>
        </div>

        <div class="flex-1 min-w-0">
            <h3 class="text-base sm:text-lg font-semibold text-blue-700 mb-1 line-clamp-2 leading-snug">
                <a asp-controller="Questions" asp-action="Details" asp-route-id="@Model.Id" class="hover:underline">
                    @Model.Title
                </a>
            </h3>

            <div class="text-xs sm:text-sm text-slate-500 mb-3 line-clamp-2 break-words">
                @Model.BodyPreview
            </div>

            <div class="flex flex-wrap items-center justify-between gap-y-2">
                <div class="flex flex-wrap gap-1.5">
                    @foreach (var tag in Model.Tags)
                    {
                        <a asp-controller="Questions" asp-action="Index" asp-route-tag="@tag"
                           class="inline-flex items-center rounded bg-slate-100 text-[11px] text-slate-600 px-2 py-0.5 hover:bg-slate-200 transition-colors">
                            @tag
                        </a>
                    }
                </div>

                <div class="flex items-center gap-2 text-xs ml-auto">
                    <img src="https://api.dicebear.com/7.x/avataaars/svg?seed=@Model.UserName" alt="@Model.UserName" class="w-5 h-5 rounded-full bg-white border border-slate-100">

                    <a asp-controller="Users" asp-action="Profile" asp-route-id="@Model.Id" class="text-blue-600 hover:underline font-medium">
                        @Model.UserName
                    </a>
                    <span class="font-bold text-slate-500 text-[10px]">@Model.UserReputation</span>
                    <span class="text-slate-400">@Model.CreatedAt.ToString("dd/MM")</span>
                </div>
            </div>
        </div>
    </div>
</article>