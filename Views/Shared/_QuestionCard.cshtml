@model VzOverFlow.Models.ViewModels.QuestionListItemViewModel

<article class="bg-white border border-slate-200 rounded-lg p-4 shadow-sm hover:border-blue-500 transition-colors">
    <div class="flex gap-4">
        <!-- Stats -->
        <div class="flex flex-col items-stretch text-center text-xs min-w-[80px]">
            <div class="mb-2 px-2 py-1 rounded-md bg-slate-50">
                <div class="font-semibold text-slate-800">@Model.VoteScore</div>
                <div class="text-[11px] text-slate-500">votes</div>
            </div>
            <div class="mb-2 px-2 py-1 rounded-md @(Model.AnswerCount > 0 ? "bg-green-50" : "bg-slate-50")">
                <div class="font-semibold @(Model.AnswerCount > 0 ? "text-green-600" : "text-slate-800")">
                    @Model.AnswerCount
                </div>
                <div class="text-[11px] text-slate-500">answers</div>
            </div>
            <div class="px-2 py-1 rounded-md bg-slate-50">
                <div class="font-semibold text-slate-800">@Model.ViewCount</div>
                <div class="text-[11px] text-slate-500">views</div>
            </div>
        </div>

        <!-- Content -->
        <div class="flex-1 min-w-0">
            <h2 class="text-sm md:text-base font-semibold text-blue-700 mb-1 line-clamp-2">
                <a asp-controller="Questions" asp-action="Details" asp-route-id="@Model.Id"
                   class="hover:underline">
                    @Model.Title
                </a>
            </h2>

            <div class="flex flex-wrap items-center justify-between gap-2 mt-2">
                <div class="flex flex-wrap gap-1">
                    @foreach (var tag in Model.Tags)
                    {
                        <a asp-controller="Questions" asp-action="Index" asp-route-tag="@tag"
                           class="inline-flex items-center rounded-full bg-slate-100 text-[11px] text-slate-700 px-2 py-0.5 hover:bg-slate-200">
                            @tag
                        </a>
                    }
                </div>
                <div class="flex items-center gap-2 text-[11px] text-slate-500">
                    <span>hỏi @Model.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</span>
                    <span>•</span>
                    <span class="font-medium text-slate-700">@Model.UserName</span>
                </div>
            </div>
        </div>
    </div>
</article>
