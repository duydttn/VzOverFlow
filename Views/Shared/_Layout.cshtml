@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - VzOverFlow</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
</head>
<body class="bg-slate-50 text-slate-900 flex flex-col min-h-screen">
    <header class="sticky top-0 z-50 w-full border-b bg-white/95 backdrop-blur-sm shadow-sm">
        <div class="max-w-6xl mx-auto px-4">
            <div class="flex h-16 items-center justify-between gap-4">
                <a asp-controller="Home" asp-action="Index" class="flex items-center gap-2 group">
                    <div class="bg-gradient-to-br from-blue-600 to-blue-400 text-white font-bold rounded-md h-8 w-8 flex items-center justify-center group-hover:shadow-lg group-hover:scale-105 transition-all">
                        Vz
                    </div>
                    <span class="font-semibold text-lg text-slate-800 group-hover:text-blue-600 transition-colors">
                        VzOverFlow
                    </span>
                </a>

                <form asp-controller="Questions" asp-action="Index" method="get" class="flex-1 hidden md:flex items-center gap-2 max-w-xl">
                    <div class="relative w-full">
                        <input name="search"
                               class="w-full rounded-md border border-slate-200 bg-slate-50 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                               placeholder="Tìm kiếm câu hỏi..." />
                    </div>
                </form>

                <div class="flex items-center gap-2">
                    <a asp-controller="Questions" asp-action="Create"
                       class="inline-flex items-center gap-2 rounded-md bg-blue-600 text-white text-sm px-3 py-1.5 hover:bg-blue-700 transition-colors">
                        <span class="font-medium">Đặt câu hỏi</span>
                    </a>

                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                        var userName = User.Identity?.Name ?? "User";
                        var userInitial = string.IsNullOrWhiteSpace(userName) ? "U" : userName.Substring(0, 1).ToUpperInvariant();

                        <div class="flex items-center gap-2">
                            <a asp-controller="Users" asp-action="Profile" asp-route-id="@userId"
                               class="flex items-center gap-2 rounded-md border border-slate-200 px-2 py-1.5 text-sm hover:bg-slate-50 transition-colors">
                                <div class="h-7 w-7 rounded-full bg-slate-800 text-white flex items-center justify-center text-xs font-semibold">
                                    @userInitial
                                </div>
                                <span class="hidden sm:inline text-slate-700">@userName</span>
                            </a>
                            <form asp-controller="Users" asp-action="Logout" method="post" class="inline">
                                @Html.AntiForgeryToken()
                                <button type="submit"
                                        class="inline-flex items-center rounded-md border border-slate-200 px-3 py-1.5 text-sm hover:bg-slate-50 text-slate-700">
                                    Đăng xuất
                                </button>
                            </form>
                        </div>
                    }
                    else
                    {
                    <a asp-controller="Users" asp-action="Login"
                       class="hidden sm:inline-flex items-center rounded-md border border-slate-200 px-3 py-1.5 text-sm hover:bg-slate-50">
                        Đăng nhập
                    </a>
                    <a asp-controller="Users" asp-action="Register"
                       class="inline-flex items-center rounded-md bg-slate-900 text-white px-3 py-1.5 text-sm hover:bg-slate-800">
                        Đăng ký
                    </a>
                    }
                </div>
            </div>
        </div>
    </header>

    <div class="flex-1 max-w-6xl mx-auto px-4 py-6 w-full">
        <div class="grid grid-cols-12 gap-6">
            @await Html.PartialAsync("_Sidebar")

            <main class="col-span-12 md:col-span-7 min-w-0">
                @RenderBody()
            </main>

            @await Component.InvokeAsync("RightSidebar")
        </div>
    </div>

    <footer class="border-t bg-white mt-auto">
        <div class="max-w-6xl mx-auto px-4 py-4 text-xs text-slate-500 flex justify-between">
            <span>© @DateTime.Now.Year VzOverFlow</span>
            <span>Học hỏi cùng cộng đồng lập trình Việt</span>
        </div>
    </footer>

    <script src="~/js/site.js"></script>
</body>
</html>
