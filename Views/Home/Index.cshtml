@model VzOverFlow.Models.ViewModels.QuestionListViewModel
@{
    ViewData["Title"] = "Trang chủ";
}

<div class="mb-6 flex items-start justify-between gap-4">
    <div>
        <h1 class="text-2xl md:text-3xl font-semibold text-slate-900 mb-1">
            Câu hỏi nổi bật
        </h1>
        <p class="text-sm text-slate-600">
            Hỏi đáp về lập trình, công nghệ và những vấn đề kỹ thuật bạn gặp phải.
        </p>
    </div>

    <a asp-controller="Questions" asp-action="Create"
       class="hidden sm:inline-flex items-center gap-2 rounded-md bg-blue-600 text-white text-sm px-3 py-2 hover:bg-blue-700 shadow-sm">
        <span class="text-lg leading-none">＋</span>
        <span>Đặt câu hỏi</span>
    </a>
</div>

<div class="mb-4 flex flex-wrap items-center gap-2 text-xs">
    @{
        string? currentSort = Context?.Request?.Query["sort"].ToString();
        string activeClass = "bg-slate-900 text-white";
        string normalClass = "bg-slate-100 text-slate-700 hover:bg-slate-200";
    }
    <a asp-action="Index" asp-route-sort="newest"
       class="px-3 py-1.5 rounded-full @((currentSort == "newest" || string.IsNullOrEmpty(currentSort)) ? activeClass : normalClass)">
        Mới nhất
    </a>
    <a asp-action="Index" asp-route-sort="active"
       class="px-3 py-1.5 rounded-full @(currentSort == "active" ? activeClass : normalClass)">
        Đang hoạt động
    </a>
    <a asp-action="Index" asp-route-sort="unanswered"
       class="px-3 py-1.5 rounded-full @(currentSort == "unanswered" ? activeClass : normalClass)">
        Chưa có trả lời
    </a>
    <a asp-action="Index" asp-route-sort="votes"
       class="px-3 py-1.5 rounded-full @(currentSort == "votes" ? activeClass : normalClass)">
        Nhiều vote
    </a>
</div>

<div class="space-y-3">
    @foreach (var q in Model.Questions)
    {
        @await Html.PartialAsync("_QuestionCard", q)
    }
</div>
